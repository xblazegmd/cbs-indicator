{
	"geode": "5.1.0",
	"gd": {
		"win": "2.2081",
		"android": "2.2081",
		"mac": "2.2081",
		"ios": "2.2081"
	},
	"id": "xblazegmd.cbs-indicator",
	"name": "CBS Indicator",
	"version": "v1.0.0-beta.1",
	"developer": "XblazeGMD",
	"description": "Make it very obvious when someone's using CBS",
	"dependencies": {
		"geode.node-ids": ">=v1.20.0"
	},
	"tags": ["interface", "enhancement"],
	"links": {
		"source": "https://github.com/xblazegmd/cbs-indicator"
	},
	"settings": {
		"gp-indicator": {
			"type": "title",
			"name": "Gameplay Indicator"
		},
		"gp-enabled": {
			"type": "bool",
			"name": "Show Gameplay Indicator",
			"description": "Shows an indicator on the top-left (or your desired position) that appears when you're using CBS or CoS",
			"default": true
		},
		"gp-position": {
			"type": "string",
			"enable-if": "gp-enabled",
			"name": "Indicator Position",
			"enable-if-description": "The indicator is disabled!",
			"default": "Top-Left",
			"one-of": ["Top-Left", "Top-Right", "Bottom-Left", "Bottom-Right"]
		},
		"gp-opacity": {
			"type": "int",
			"enable-if": "gp-enabled",
			"enable-if-description": "The indicator is disabled!",
			"name": "Indicator Opacity",
			"description": "The opacity of the indicator (0 -> 255)",
			"default": 10,
			"min": 0,
			"max": 255,
			"control": {
				"slider": true
			}
		},
		"end-wm": {
			"type": "title",
			"name": "Endscreen Watermark"
		},
		"wm-enabled": {
			"type": "bool",
			"name": "Show Endscreen Watermark",
			"description": "Shows a watermark on the top-right (or your desired position) that appears when you're using CBS or CoS.\n\nSimilar to the watermark in the CBF mod.",
			"default": true
		},
		"wm-position": {
			"type": "string",
			"enable-if": "wm-enabled",
			"enable-if-description": "The watermark is disabled!",
			"name": "Watermark Position",
			"default": "Top-Right",
			"one-of": ["Top-Left", "Top-Right", "Bottom-Left", "Bottom-Right"]
		},
		"wm-opacity": {
			"type": "int",
			"enable-if": "wm-enabled",
			"enable-if-description": "The watermark is disabled!",
			"name": "Watermark Opacity",
			"description": "The opacity of the watermark (0 -> 255)",
			"default": 10,
			"min": 0,
			"max": 255,
			"control": {
				"slider": true
			}
		},
		"end-text": {
			"type": "title",
			"name": "Endscreen Text"
		},
		"end-text-enabled": {
			"type": "bool",
			"name": "Custom Endscreen Text",
			"description": "Changes the text on the endscreen when using CBS or CoS",
			"default": true
		},
		"end-text-cbs": {
			"type": "string",
			"enable-if": "end-text-enabled",
			"enable-if-description": "The custom endscreen text is disabled!",
			"filter": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!#$%&'()*+,-./:;<=>?@[]^_`{|}~ ",
			"name": "CBS Text",
			"description": "The text that appears when completing a level with CBS",
			"default": "CBS Detected Loser!"
		},
		"end-text-cos": {
			"type": "string",
			"enable-if": "end-text-enabled",
			"enable-if-description": "The custom endscreen text is disabled!",
			"filter": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!#$%&'()*+,-./:;<=>?@[]^_`{|}~ ",
			"name": "CoS Text",
			"description": "The text that appears when completing a level with CoS",
			"default": "CoS"
		}
	}
}
